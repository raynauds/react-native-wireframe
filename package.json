{
  "name": "react-native-wireframe-monorepo",
  "version": "0.0.1",
  "private": true,
  "workspaces": [
    "apps/react-native-wireframe-storybook",
    "packages/create-react-native-wireframe",
    "packages/react-native-wireframe"
  ],
  "scripts": {
    "check": "npm run check -w create-react-native-wireframe -w react-native-wireframe -w react-native-wireframe-storybook",
    "storybook:web": "npm run storybook -w react-native-wireframe-storybook",
    "storybook:android": "npm run android -w react-native-wireframe-storybook",
    "storybook:ios": "npm run ios -w react-native-wireframe-storybook",
    "cli": "npm run cli -w create-react-native-wireframe",
    "build:cli": "npm run build -w create-react-native-wireframe",
    "publish:cli": "npm run build:wireframe && npm publish -w create-react-native-wireframe",
    "build:wireframe": "npm run build -w react-native-wireframe",
    "publish:wireframe": "npm run build:wireframe && npm publish -w react-native-wireframe"
  },
  "devDependencies": {
    "eslint": "^9.25.0",
    "eslint-config-expo": "~9.2.0",
    "eslint-plugin-storybook": "^9.1.1",
    "typescript": "~5.8.3"
  }
}
